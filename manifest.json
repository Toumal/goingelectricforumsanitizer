{  
  "manifest_version": 2,

  "name": "GoingElectric Forum Sanitizer",
  "description": "Removes unwanted discussions based on content and/or user, and unlike the ignore function it completely hides offending content.",
  "version": "1.0",

  "permissions": [
    "https://www.goingelectric.de/*",
    "storage"
  ],

  "content_scripts": [
    {
      "matches":["https://www.goingelectric.de/*"],
      "js":["js/input.js"]
    }
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}